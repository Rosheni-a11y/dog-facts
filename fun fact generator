    <div class="container">
        <h1>Fun Fact About Dogs</h1>
        <p id="fact"></p>
        <button id="newFactButton">Show Random Fact</button>
    </div>
    <script>
        const facts = [
            "Dogs have an extraordinary sense of smell, which is estimated to be between 10,000 to 100,000 times more sensitive than that of humans.",
            "Just like human fingerprints, every dog has a unique nose print.",
            "Dogs communicate using a combination of vocalizations, body language, and facial expressions.",
            "The average lifespan of a dog varies by breed, but most dogs live between 10 to 15 years.",
            "A dogâ€™s tail wagging can indicate different emotions.",
            "Dogs are known for their intelligence and can learn a variety of commands and tricks.",
            "Dogs are pack animals and thrive on social interaction.",
            "Dogs have an exceptional sense of hearing and can hear sounds at frequencies as high as 65,000 Hz.",
            "There are over 340 different dog breeds recognized worldwide.",
            "Dogs have been companions to humans for thousands of years."
        ];

        const factElement = document.getElementById('fact');
        const button = document.getElementById('newFactButton');

        button.addEventListener('click', () => {
            const randomIndex = Math.floor(Math.random() * facts.length);
            factElement.style.opacity = 0; // Fade out
            setTimeout(() => {
                factElement.textContent = facts[randomIndex];
                factElement.style.opacity = 1; // Fade in
            }, 500);
        });
    </script>
